{
	"name": "iobroker-javascript",
	"displayName": "ioBroker.javascript",
	"description": "Simplifies the development of JavaScript/TypeScript scripts for ioBroker",
	"version": "0.0.1",
	"author": {"name": "nokxs", "url": "https://github.com/nokxs"},
	"publisher": "nokxs",
	"icon": "https://upload.wikimedia.org/wikipedia/commons/8/82/IoBroker_Logo.png",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:iobroker-javascript.script-explorer",
		"onCommand:iobroker-javascript.downloadCurrent",
		"onCommand:iobroker-javascript.downloadAll",
		"onCommand:iobroker-javascript.uploadCurrent",
		"onCommand:iobroker-javascript.uploadAll",
		"onCommand:iobroker-javascript.startCurrentScript",
		"onCommand:iobroker-javascript.stopCurrentScript",
		"onCommand:iobroker-javascript.updateTypeDefinition"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "iobroker",
					"title": "ioBroker",
					"icon": "resources/iobroker-icon.svg"
				}
			]
		},
		"views": {
			"iobroker": [
				{
					"id": "iobroker-javascript.script-explorer",
					"name": "Script explorer"
				}
			]
		},
		"commands": [
			{
				"command": "iobroker-javascript.downloadCurrent",
				"title": "iobroker: Download current script"
			},
			{
				"command": "iobroker-javascript.showAllLog",
				"title": "iobroker: Show all log output"
			},
			{
				"command": "iobroker-javascript.downloadAll",
				"title": "iobroker: Download all scripts"
			},
			{
				"command": "iobroker-javascript.uploadCurrent",
				"title": "iobroker: Upload current script"
			},
			{
				"command": "iobroker-javascript.uploadAll",
				"title": "iobroker: Upload all scripts"
			},
			{
				"command": "iobroker-javascript.startCurrentScript",
				"title": "iobroker: Start current script"
			},
			{
				"command": "iobroker-javascript.stopCurrentScript",
				"title": "iobroker: Stop current script"
			},
			{
				"command": "iobroker-javascript.updateTypeDefinition",
				"title": "iobroker: Update JS type definition from GitHub"
			},
			{
				"command": "iobroker-javascript.view.scriptExplorer.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "iobroker-javascript.view.scriptExplorer.download",
				"title": "Download",
				"icon": "$(arrow-down)"
			},
			{
				"command": "iobroker-javascript.view.scriptExplorer.upload",
				"title": "Upload",
				"icon": "$(arrow-up)"
			},
			{
				"command": "iobroker-javascript.view.scriptExplorer.start",
				"title": "Start",
				"icon": "$(debug-start)"
			},
			{
				"command": "iobroker-javascript.view.scriptExplorer.pause",
				"title": "Stop",
				"icon": "$(debug-pause)"
			}
		],
		"menus": {
			"view/title": [
                {
                    "command": "iobroker-javascript.view.scriptExplorer.refresh",
                    "when": "view == iobroker-javascript.script-explorer",
                    "group": "navigation"
                }
			],
			"view/item/context": [
				{
					"command": "iobroker-javascript.view.scriptExplorer.download",
					"when": "view == iobroker-javascript.script-explorer && viewItem == scriptItem",
					"group": "inline"
				},
				{
					"command": "iobroker-javascript.view.scriptExplorer.upload",
					"when": "view == iobroker-javascript.script-explorer && viewItem == scriptItem",
					"group": "inline"
				},
				{
					"command": "iobroker-javascript.view.scriptExplorer.start",
					"when": "view == iobroker-javascript.script-explorer && viewItem == scriptItem",
					"group": "inline"
				},
				{
					"command": "iobroker-javascript.view.scriptExplorer.pause",
					"when": "view == iobroker-javascript.script-explorer && viewItem == scriptItem",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"inversify": "^5.0.5",
		"reflect-metadata": "^0.1.13",
		"socket.io": "^2.3.0",
		"socket.io-client": "^2.3.0",
		"ws": "^7.4.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"ts-loader": "^8.0.11",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0",
		"@types/ws": "^7.4.0",
		"@types/socket.io": "^2.1.12",
		"@types/socket.io-client": "^1.4.34"
	}
}
